@model Order
@{
    ViewData["Title"] = "CustomerForm";
    Layout = "_Layout";
}
<h1>Order Form</h1>
<form asp-action="SaveOrder">
    <div class="form-group">
        <label asp-for="Date">Order Date</label>
        <input asp-for="Date" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Description">Order Description</label>
        <input asp-for="Description" type="text" class="form-control">
    </div>
    <input asp-for="Id" name ="customerId" type="hidden" value="Viewbag">
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

